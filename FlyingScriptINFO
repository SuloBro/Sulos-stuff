local currentPackIndex = 3
local hoverAnim
local flyForwardAnim
local lastAnimationChange = 0
local ANIMATION_CHANGE_COOLDOWN = 0.75

-- Smooth button bounce animation
local function bounceButton(button)
	local originalSize = button.Size

	-- Shrink
	TweenService:Create(button, TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
		Size = UDim2.new(originalSize.X.Scale * 0.9, originalSize.X.Offset * 0.9, originalSize.Y.Scale * 0.9, originalSize.Y.Offset * 0.9)
	}):Play()

	-- Bounce back
	task.wait(0.1)
	TweenService:Create(button, TweenInfo.new(0.3, Enum.EasingStyle.Elastic, Enum.EasingDirection.Out), {
		Size = originalSize
	}):Play()
end

-- Enhanced Discord Notification System
local activeUsers = {}
local lastNotificationMessage = nil
local lastNotificationTime = 0
local currentGroupRank = nil
local notificationCooldown = 0.5 -- Cooldown to prevent spam

-- Function to get player's group rank
local function getGroupRank()
	local success, rankInfo = pcall(function()
		return player:GetRankInGroup(GROUP_ID)
	end)

	if success then
		local success2, roleInfo = pcall(function()
			return player:GetRoleInGroup(GROUP_ID)
		end)

		if success2 then
			return roleInfo, rankInfo
		else
			return "Member", rankInfo
		end
	end

	return "Guest", 0
end

-- Function to get active users count
local function getActiveUsersCount()
	local count = 0
	for _, data in pairs(activeUsers) do
		if tick() - data.lastActive < 300 then -- 5 minutes timeout
			count = count + 1
		end
	end
	return count
end

-- Function to update active user tracking
local function updateActiveUser()
	activeUsers[player.UserId] = {
		name = player.Name,
		lastActive = tick(),
		currentPack = animationPacks[currentPackIndex].name
	}
end

-- Enhanced Discord Webhook Feedback
local function sendDiscordFeedback(feedbackType, message, forceNew)
	spawn(function()
		pcall(function()
			-- Update active user tracking
			updateActiveUser()

			-- Get current group rank
			local groupRank, rankNumber = getGroupRank()
			currentGroupRank = groupRank

			-- Get active users count
			local activeCount = getActiveUsersCount()

			local currentTime = tick()
			local shouldUpdateExisting = not forceNew and lastNotificationMessage and (currentTime - lastNotificationTime < notificationCooldown)

			local data = {
				["content"] = "Hello @Weebhook Script is set and seems to work perfectly, for more detailed information:",
				["embeds"] = {{
					["title"] = "üíã Flight Script Activity - Sulos Work",
					["description"] = shouldUpdateExisting and lastNotificationMessage or message,
					["color"] = feedbackType == "positive" and 5025616 or (feedbackType == "rank_change" and 16776960 or 15158332),
					["fields"] = {
						{
							["name"] = "üë§ ‚óΩ USERNAME",
							["value"] = player.Name,
							["inline"] = true
						},
						{
							["name"] = "üÜî ‚óΩ User",
							["value"] = tostring(player.UserId),
							["inline"] = true
						},
						{
							["name"] = "‚≠ê Group Rank",
							["value"] = groupRank .. " (" .. rankNumber .. ")",
							["inline"] = true
						},
						{
							["name"] = "üíÉ Selected Animation",
							["value"] = animationPacks[currentPackIndex].name,
							["inline"] = true
						},
						{
							["name"] = "üë• Active Users",
							["value"] = tostring(activeCount) .. " users",
							["inline"] = true
						},
						{
							["name"] = "üëΩ UPDATE INFORMATION",
							["value"] = "Added new animations, smoother execution, Sulos magic, improved flight system, new icons, custom player thumbnail. To unlock the full benefits of the script please buy the Support shirt in the roblox group!",
							["inline"] = true
						},
						{
							["name"] = "‚è∞ Last Activity",
							["value"] = os.date("%H:%M:%S"),
							["inline"] = true
						}
					},
					["timestamp"] = os.date("!%Y-%m-%dT%H:%M:%S"),
					["footer"] = {
						["text"] = "Sulo's Flight Script - Real-time Monitoring"
					}
				}}
			}

			if request then
				request({
					Url = DISCORD_WEBHOOK,
					Method = "POST",
					Headers = {
						["Content-Type"] = "application/json"
					},
					Body = HttpService:JSONEncode(data)
				})
			end

			-- Update tracking variables
			lastNotificationMessage = message
			lastNotificationTime = currentTime
		end)
	end)
end

-- Function to send rank change notification
local function sendRankChangeNotification(oldRank, newRank)
	local changeType = "promoted"
	if newRank < oldRank then
		changeType = "demoted"
	elseif newRank == oldRank then
		return -- No change
	end

	local message = string.format("üéâ Player %s was %s from %s to %s!", player.Name, changeType, oldRank, newRank)
	sendDiscordFeedback("rank_change", message, true) -- Force new notification for rank changes
end

-- Monitor for group rank changes
local function monitorGroupRank()
	spawn(function()
		local lastRank = 0

		while true do
			pcall(function()
				local currentRank = player:GetRankInGroup(GROUP_ID)

				if lastRank > 0 and currentRank ~= lastRank then
					local oldRole, _ = getGroupRank() -- This will update currentGroupRank
					-- Wait a moment to ensure the role info is updated
					task.wait(0.1)
					local newRole, newRankNum = getGroupRank()
					sendRankChangeNotification(oldRole, newRole)
				end

				lastRank = currentRank
			end)

			-- Check every 30 seconds
			task.wait(30)
		end
	end)
end

-- Start monitoring group rank changes
monitorGroupRank()

local function showCooldownNotification()
	-- Check if notification already exists and clean it up
	local playerGui = player:WaitForChild("PlayerGui")
	local existingNotification = playerGui:FindFirstChild("CooldownNotification")
	if existingNotification then
		existingNotification:Destroy()
	end

	local screenGui = Instance.new("ScreenGui")
	screenGui.Name = "CooldownNotification"
	screenGui.ResetOnSpawn = false
	screenGui.Parent = playerGui

	local frame = Instance.new("Frame")
	frame.Size = UDim2.new(0, 300, 0, 80)
	frame.Position = UDim2.new(0.5, -150, 0.8, -40)
	frame.BackgroundColor3 = Color3.fromRGB(255, 200, 100)
	frame.BorderSizePixel = 0
	frame.Parent = screenGui

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 8)
	corner.Parent = frame

	local stroke = Instance.new("UIStroke")
	stroke.Color = Color3.fromRGB(0, 0, 0)
	stroke.Thickness = 2
	stroke.Parent = frame

	local message = Instance.new("TextLabel")
	message.Size = UDim2.new(1, -20, 1, -20)
	message.Position = UDim2.new(0, 10, 0, 10)
	message.BackgroundTransparency = 1
	message.Text = "‚è±Ô∏è Please wait before changing animations again!"
	message.TextColor3 = Color3.fromRGB(0, 0, 0)
	message.Font = Enum.Font.GothamBold
	message.TextSize = 14
	message.TextWrapped = true
	message.Parent = frame

	-- Simple entrance animation
	frame.Position = UDim2.new(0.5, -150, 1, 50) -- Start below screen
	local slideIn = TweenService:Create(frame, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
		Position = UDim2.new(0.5, -150, 0.8, -40)
	})
	slideIn:Play()

	-- Wait and then slide out and destroy
	spawn(function()
		task.wait(1.5)

		if screenGui and screenGui.Parent then
			local slideOut = TweenService:Create(frame, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {
				Position = UDim2.new(0.5, -150, 1, 50)
			})
			slideOut:Play()

			-- Destroy immediately after animation starts
			task.wait(0.1)
			if screenGui and screenGui.Parent then
				screenGui:Destroy()
			end
		end
	end)
end

local function checkShirtOwnership(shirtId)
	local success, ownsShirt = pcall(function()
		return MarketplaceService:PlayerOwnsAsset(player, shirtId)
	end)
	return success and ownsShirt
end

