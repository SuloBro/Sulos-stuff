    title.BackgroundTransparency = 1
    title.Text = "‚ú® Sulooooss Flight Loaded!"
    title.TextColor3 = Color3.fromRGB(85, 255, 127)
    title.Font = Enum.Font.GothamBold
    title.TextSize = 18
