        true
    )
    
    task.wait(5)
    frame:TweenPosition(
        UDim2.new(1, 0, 0, 20),
        Enum.EasingDirection.In,
        Enum.EasingStyle.Back,
        0.4,
        true
    )
    task.wait(0.5)
    screenGui:Destroy()
end

